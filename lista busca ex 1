#include <iostream>
#include <vector>

using namespace std;

int main() {
    int tamanho;
    cout << "Digite o tamanho do vetor: ";
    cin >> tamanho;

    // Criando um vetor de inteiros com o tamanho especificado
    vector<int> vet(tamanho);

    cout << "Digite os elementos do vetor:" << endl;
    // Preenchendo o vetor com inteiros fornecidos pelo usuÃ¡rio
    for (int i = 0; i < tamanho; ++i) {
        cout << "Elemento " << i + 1 << ": ";
        cin >> vet[i];
    }

    // Imprimindo o vetor preenchido
    cout << "Vetor preenchido:" << endl;
    for (int i = 0; i < tamanho; ++i) {
        cout << vet[i] << " ";
    }
    cout << endl;

    return 0;
}
