#include <iostream>
#include <vector>
#include <string>

using namespace std;

void selectionSort(vector<string> &nomes) {
    int n = nomes.size();
    for (int i = 0; i < n - 1; i++) {
        int menor_indice = i;
        for (int j = i + 1; j < n; j++) {
            if (nomes[j].size() < nomes[menor_indice].size()) {
                menor_indice = j;
            }
        }
        if (menor_indice != i) {
            swap(nomes[i], nomes[menor_indice]);
        }
    }
}

int main() {
    int n;
    cout << "Digite o nÃºmero de nomes a serem inseridos: ";
    cin >> n;

    vector<string> nomes(n);
    
    cout << "Digite os nomes:\n";
    for (int i = 0; i < n; i++) {
        cin >> nomes[i];
    }

    selectionSort(nomes);

    cout << "\nNomes ordenados pelo tamanho:\n";
    for (const auto &nome : nomes) {
        cout << nome << endl;
    }

    return 0;
}
